<% provide(:title, "Profile") %>
<% content_for :custom_css do %>
  <style type="text/css">

  </style>
<% end %>
<% content_for :body do %>
  <h1>Profile</h1>
  <div class="container height-100 d-flex justify-content-center align-items-center">
    <div class="card text-center">
      <div class="py-4 p-2">
        <div>
          <%= gravatar_for @user %>
        </div>
        <div class="mt-3 d-flex flex-row justify-content-center">
          <h5 class="text-dark"><%= @user.name %></h5> <span class="dots"><i class="fa fa-check"></i></span>
        </div> <span class="text-dark">Member since <%= time_ago_in_words(@user.created_at) %> ago</span>
        <div class="mt-3"> <button class="btn btn-danger">Follow</button> <button class="btn btn-outline-secondary"><i class="fa fa-users"></i> 451</button> </div>
      </div>
      <div>
        <ul class="list-unstyled list">
          <li> <span class="font-weight-bold text-dark">Post</span>
            <div> <span class="mr-1 text-dark">5</span> <i class="fa fa-angle-right"></i> </div>
          </li>
          <li> <span class="font-weight-bold text-dark">Comments</span>
            <div> <span class="mr-1 text-dark">45</span> <i class="fa fa-angle-right"></i> </div>
          </li>
          <li> <span class="font-weight-bold text-dark">Favorites</span>
            <div> <span class="mr-1 text-dark">15</span> <i class="fa fa-angle-right"></i> </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
<% end %>
